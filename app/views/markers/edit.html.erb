<h1>Edit Marker</h1>

  <%= form_for(@marker) do |f| %>

<!--Display of error messages-->
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  <% if @marker.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@marker.errors.count, "error") %> prohibited
        this marker from being saved:
      </h2>
      <ul>
        <% @marker.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

<!-- Edit page layout-->
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div align="right">
    <%= link_to '', markers_path, class:"btn btn-md btn-warning glyphicon glyphicon-circle-arrow-left",
    title: 'Back to markers', 'data-toggle' => 'tooltip', 'data-placement' => 'right'%>
    </div>

    <%=f.label :LAT%>
    <%=f.text_area :lat%>
    <%=f.label :LNG%>
    <%=f.text_area :lng%>
    <%=f.label :YEAR%>
    <%=f.text_field :year%>


    <%= f.submit "Edit", class: "btn btn-primary" %>

    <% end %>

  </div>
</div>
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
